{
  "imports": {
    "lume/": "https://deno.land/x/lume@v1.19.1/"
  },
  "lock": false,
  "tasks": {
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "serve:english": "deno task serve --location=https://oscarotero.com",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "deploy:gal": "SITE_LANG=gl deno task lume --location=https://oscarotero.gal && rsync -r _site/ 'gal@oscarotero.gal:~/www'",
    "deploy:com": "SITE_LANG=en deno task lume --location=https://oscarotero.com && rsync -r _site/ 'oscarotero@oscarotero.com:~/www'",
    "deploy": "deno task deploy:gal && deno task deploy:com"
  }
}
